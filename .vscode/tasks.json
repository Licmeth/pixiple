{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cl.exe",
            "type": "shell",
            "command": "cl.exe",
            "args": [
              "/Zi",
              "/EHsc",
              "/std:c++17",
              "/DUNICODE",
              "/D_UNICODE",
              "/Fe:",
              "./bin/pixiple.exe",
              "./src/*.cpp",
              "./src/external/*.cpp",
              "./src/shared/*.cpp",
              "Shell32.lib",
              "Gdi32.lib"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
              "kind": "build",
              "isDefault": true
          },
        }
}